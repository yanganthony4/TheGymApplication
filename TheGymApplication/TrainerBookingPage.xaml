<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGymApplication.TrainerBookingPage"
             Title="TrainerBookingPage"
             BackgroundImageSource="background.jpg">
    <ScrollView>

        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">

            <Image Source="logo.png" HeightRequest="150" VerticalOptions="Center" HorizontalOptions="Center"/>

            <Frame BackgroundColor="White" Margin="0,20,0,0" CornerRadius="5">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="trainer1.jpg" HeightRequest="150" WidthRequest="150" Grid.RowSpan="3"/>
                    <Label Text="Keith John" FontSize="Large" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Description 1" FontSize="Medium" Grid.Row="1" Grid.Column="1"/>
                    <Label Text="Trainer" FontSize="Medium" Grid.Row="2" Grid.Column="1"/>
                    <Button Text="Book" BackgroundColor="Black" Grid.Row="1" Grid.Column="2"></Button>
                </Grid>
            </Frame>

            <Frame BackgroundColor="White" Margin="0,20,0,0" CornerRadius="5">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="trainer2.jpg" HeightRequest="150" WidthRequest="150" Grid.RowSpan="3"/>
                    <Label Text="Barry Owens" FontSize="Large" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Trainer" FontSize="Medium" Grid.Row="1" Grid.Column="1"/>
                    <Label Text="Details 2" FontSize="Medium" Grid.Row="2" Grid.Column="1"/>
                    <Button Text="Book" BackgroundColor="Black" Grid.Row="1" Grid.Column="2"></Button>
                </Grid>
            </Frame>

            <Frame BackgroundColor="White" Margin="0,20,0,0" CornerRadius="5">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="trainer3.jpg" HeightRequest="150" WidthRequest="150" Grid.RowSpan="3"/>
                    <Label Text="Reese Penny" FontSize="Large" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Trainer / Masseur" FontSize="Medium" Grid.Row="1" Grid.Column="1"/>
                    <Label Text="Details 3" FontSize="Medium" Grid.Row="2" Grid.Column="1"/>
                    <Button Text="Book" BackgroundColor="Black" Grid.Row="1" Grid.Column="2"></Button>
                </Grid>
            </Frame>

            <Frame BackgroundColor="White" Margin="0,20,0,0" CornerRadius="5">
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="trainer4.jpg" HeightRequest="150" WidthRequest="150" Grid.RowSpan="3"/>
                    <Label Text="Chad Bulwark" FontSize="Large" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Trainer / Masseur" FontSize="Medium" Grid.Row="1" Grid.Column="1"/>
                    <Label Text="Details 3" FontSize="Medium" Grid.Row="2" Grid.Column="1"/>
                    <Button Text="Book" BackgroundColor="Black" Grid.Row="1" Grid.Column="2"></Button>
                </Grid>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>